// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Personne {
  id String @id @defaut(uuid())
  nom       String
  prenom    String
  numero    String
  CIN       String?   @unique
  domicile  String
  dateNaissance DateTime
  genre     ENUM_Sexe
  pdp       String
  motDePasse String
  email     String?   @unique
}

enum ENUM_Sexe {
  MASCULIN
  FEMININ
  AUTRE
}


model Categorie_article {
  id  String @id @defaut(uuid())
  nom String
}


model Article {
  id  String @id @defaut(uuid())
  nom           String
  personne      Personne              @relation(fields: [personneId], references: [id])
  personneId    Int
  prixUnitaire  Float
  quantite      Int
  qualite       String
  dateAjout     DateTime
  description   String
  status        ENUM_Status_Article
}

enum ENUM_Status_Article {
  EN_STOCK
  VENDU
  RETIRE
}



